{{>layouts/header}}

<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    {{#articles}}
        <tr>
            <th>{{id}}</th>
            <td><a href="/article/{{id}}">{{title}}</a></td>
